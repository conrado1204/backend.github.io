<div class="contain_form_paginate">
  <form id="form-paginate">
    <label for="page">PÃ¡gina:</label>
    <input id="page" type="number" min="0"/>

    <label for="limit">Limite:</label>
    <input id="limit" type="number" min="0" />

    <button class="btn2" type="submit">Ir</button>
  </form>
</div>

<div class="container_products">
  {{#each docs}}
    <div class="tarjeta">
      <div class="cuerpo">
        <img class="class_img" src="{{this.thumbnail}}" alt="muestra" />
      </div>
      <div class="pie">
        <div class="description_container">
          <span class="description">{{this.title}}</span>
          <span class="description">${{this.price}}</span>
        </div>
        <div class="container_btn">
          <button class="btn" onclick="addProductCart('{{this._id}}')" style="width: 100%;">Agregar
            al carrito</button>
        </div>
      </div>
    </div>
  {{/each}}
</div>

<div class="container">
  {{#if hasPrevPage}}
    <a href="{{prevLink}}">Anterior</a>
  {{/if}}

  {{#if hasNextPage}}
    <a href="{{nextLink}}">Siguiente</a>
  {{/if}}
</div>

<script src="/static/js/paginate.js"></script>